<section>
  <ul id="project-list" class="text-sm">
    <%= for project <- @projects do %>
      <li
        data-project-category="<%= project.category %>"
        class="project stack:-4"
      >
        <div class="relative bg-gray-300 pb-full img-wrapper">
          <img
            class="w-full h-full absolute inset-0 object-cover border-2 border-gray-900"
            src="<%= project.cover_url %>/400x400.jpg"
          />
        </div>
        <div>
          <h2 class="uppercase font-medium">
            <a href="<%= Routes.project_path(@conn, :show, project) %>" class="hover:text-orange-500">
              <%= project.title %>
            </a>
          </h2>
          <p class="text-gray-700 truncate leading-none">
            <%= project.very_short_description %>
          </p>
        </div>
      </li>
    <% end %>
  </ul>
</section>
